    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton5ActionPerformed
        // TODO add your handling code here:
        //check out
        int roomNum ; 
        try {
            roomNum = Integer.parseInt(jTextField1.getText());
        }catch (NumberFormatException ex ){
         JOptionPane.showMessageDialog(this , " the room number must be digit , please try again");
          return ;    
        }
        String ID =jTextField2.getText() ;
       Booking B=testHotel.hotel.findBooking( ID ,roomNum );
        if(B==null) {
        JOptionPane.showMessageDialog(this ,"coudln't found your booking !  ");
         }
        else {
        B.checkOut(); 
        }
        jTextField1.setText("");
         jTextField2.setText("");
         jTextField3.setText("");
         jTextField5.setText("");
    }//GEN-LAST:event_jButton5ActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        // TODO add your handling code here:
        //cancel 
        int roomNum ; 
        try {
            roomNum = Integer.parseInt(jTextField1.getText());
        }catch (NumberFormatException ex ){
         JOptionPane.showMessageDialog(null , " the room number must be digit , please try again");
          return ;    
        }
        String ID =jTextField2.getText() ;
        if(testHotel.hotel.cancelBooking(ID, roomNum  )) {
JOptionPane.showMessageDialog(this,"your booking has been canceled successfully! "); }		
else {
JOptionPane.showMessageDialog(this , "sorry!, couldn't cancel your booking");

}
    jTextField1.setText("");
         jTextField2.setText("");
         jTextField3.setText("");
         jTextField5.setText("");    
        
    }//GEN-LAST:event_jButton4ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        // TODO add your handling code here:
        //make new booking 
        int roomNum;
        try{
             roomNum = Integer.parseInt(jTextField1.getText());
        }catch(NumberFormatException ex){
            JOptionPane.showMessageDialog(null , " the room number must be digit , please try again");
            return ; 
        }
        Room r =testHotel.hotel.findRoom(roomNum);
				if ( r==null||r.isAvailable() ==false ) {
	
						System.out.println("This room is not available, please try another one");
						    return;
						}
        
        
        
        String ID =jTextField2.getText() ;
        String name = jTextField3.getText();
        
        String pNumber;
         
         try {
             pNumber = jTextField5.getText(); 

            if (pNumber.length()!=10)
           throw new invalidPhoneNumber("mobile number must be only 10 digit");
            long num =Long.parseLong(pNumber);
              }
          catch (invalidPhoneNumber e){
        JOptionPane.showMessageDialog(this ,e.getMessage());
        return ; 
        }
        
        int days = jComboBox1.getSelectedIndex() + 1 ;
int startYear = Integer.parseInt(jTextField6.getText());
int startMonth = Integer.parseInt(jTextField7.getText());
int startDay = Integer.parseInt(jTextField8.getText());
int endDay = startDay + days;
int endMonth = startMonth;
int endYear = startYear;

if (endDay > 30) {
    endDay -= 30;
    endMonth++;
    if (endMonth > 12) {
        endMonth = 1;
        endYear++;
    }
}

        Booking book =new Booking ( name, pNumber, ID);
        validBooking =book.checkIn(hotel ,r, days,startDay, startMonth, startYear, endDay, endMonth, endYear);     
         testHotel.hotel.addBooking(book); 
         JOptionPane.showMessageDialog(this, "Booking added successfully! Enjoy your stay!"); 
         JOptionPane.showMessageDialog(this , book.toString()) ;
                  
         jTextField1.setText("");
         jTextField2.setText("");
         jTextField3.setText("");
         jTextField5.setText("");
jTextField6.setText("");
    jTextField7.setText("");
    jTextField8.setText("");


        
    }//GEN-LAST:event_jButton3ActionPerformed

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton6ActionPerformed
        // TODO add your handling code here:
        //findBooking 
        int roomNum;
        try{
             roomNum = Integer.parseInt(jTextField1.getText());
        }catch(NumberFormatException ex){
            JOptionPane.showMessageDialog(this, " the room number must be digit , please try again");
            return ; 
        }
         String id =jTextField2.getText() ;
         
         Booking B=hotel.findBooking(id ,roomNum );
			if(B==null)
				JOptionPane.showMessageDialog(this , "coudln't found your booking ! ");
			else 
				JOptionPane.showMessageDialog(this , B.toString());
                        
                        jTextField1.setText("");
         jTextField2.setText("");
         jTextField3.setText("");
         jTextField5.setText("");
        
    }//GEN-LAST:event_jButton6ActionPerformed

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton7ActionPerformed
        // TODO add your handling code here:
        //show 
        jTextArea1.setText("");
        if(jRadioButton1.isSelected()== true){
            StandardRoom[] list1 =testHotel.hotel.getStandard();
					for(int i=0;i<list1.length;i++)
						if(list1[i]!=null) 
							jTextArea1.append(list1[i].toString() + "\n");
        }
        else 
            if(jRadioButton2.isSelected()== true){
                Suite [] list2 =hotel.getSuites();
					for(int i=0;i<list2.length;i++)
					if(list2[i]!=null&&!(list2[i] instanceof DeluxeSuite)&&!(list2[i] instanceof ExecutiveSuite)) 
							jTextArea1.append(list2[i].toString() + "\n");
            }
            else 
                if(jRadioButton3.isSelected()== true){
                    int numR ; 
                    try{
                     numR =Integer.parseInt(JOptionPane.showInputDialog(this, "Enter how many extra rooms:"));
                    }catch (NumberFormatException ex ){
                      JOptionPane.showInputDialog(this , ex.toString());
                              return ;
                    }
					Suite [] list3 =testHotel.hotel.getSuites(numR);
					for(int i=0;i<list3.length;i++)
						if(list3[i]!=null) 
                                                    jTextArea1.append(list3[i].toString() + "\n");
                }
                else 
                    if(jRadioButton4.isSelected()== true){
                        String  meetingR = JOptionPane.showInputDialog(this, "Enter the size of meeting room:");
                    
                        
					Suite [] list4 =testHotel.hotel.getSuites(meetingR);
					for(int i=0;i<list4.length;i++)
						if(list4[i]!=null) 
                                                    
                                                    jTextArea1.append(list4[i].toString() + "\n");
                    }
                    else 
                    jTextArea1.append("select the room type you want");   
                    
            
    }//GEN-LAST:event_jButton7ActionPerformed

