		public static void makeNewBooking() {
			System.out.println("Enter Room Number:");
			int number = input.nextInt();
			Room r = hotel.findRoom(number);
			if ( !r.isAvailable () ||  r==null ) {

					System.out.println("This room is not available, please try another one");
					    return;
					}
					System.out.println("Enter your full name: ");
					input.nextLine ();
					String name=input.nextLine();
					System.out.println ("Enter phone number:");
					input.nextLine ();
					String pNumber=input.next();

					System.out.println ("Enter your ID: ");
					input.nextLine ();
					String ID =input.next();

					Booking book =new Booking ( name, pNumber, ID);
					System.out.println ( "Enter the number of days for your stay: ") ;

					int day = input.nextInt() ; 
					book.CheckIn(r, day);
					hotel.addBooking(book); 
					System.out.println (  "Booking added successfully! Enjoy your stay!"); 
					System.out.println (book.toString()) ;
			
		}
		//--------------------------

public static void cancleBooking() {
		System.out.println("\n Enter your Choice :");
		System.out.println("1- Cancle reservation :");
		System.out.println("2- Make checkout for reservation: ");
		System.out.println("3- return to the main menu ");
		int choice =input.nextInt();
		switch(choice) {
		case 1 :
			System.out.println("Enter customer id :");
			String id = input.next();
			System.out.println("Enter room number :");
			int num=input.nextInt();
			
			
			if(hotel.cancelBooking(id, num ))
				System.out.println("your reservation has been successfully canceled ! ");
			
			else
				System.out.println("sorry ! , couldn't cancel your reservation");
			break;
		case 2 :
			System.out.println("Enter customer id :");
			 id = input.next();
			System.out.println("Enter room number :");
			 num=input.nextInt()
			Booking B=hotel.findBooking(id , num );
			 if(B==null)
				 System.out.println("can't found this reservation ");
			 else
				 B.checkout();
			 break;
		case 3 : 
			System.out.println("");
			break;
			default :
				System.out.println(" invalid input");
			
			
			
		}
		
		
	}
	
	public void findBooking() {
		System.out.println("Enter customer id :");
		String id = input.next();
		System.out.println("Enter room number :");
		int num=input.nextInt();
		Booking B=hotel.findBooking(id , num );
		if(B==null)
			System.out.println("can't found this reservation");
		else 
			System.out.println(B.toString());
	}

